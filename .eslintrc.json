{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "curly": "error",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "sort-keys": [
      "error",
      "asc",
      { "caseSensitive": true, "natural": false }
    ],
    "sort-vars": ["error", { "ignoreCase": true }]
  }
}
